[alias]
    ls = log --graph --decorate --pretty=oneline --abbrev-commit --all
	st = status --short --branch
	checkin = "!f() { git add . && git commit --all --message \"$1\"; }; f"
	rollback = revert
	undo = reset --hard HEAD
	new = checkout -b
	branches = branch -a
	nuke = branch -d
	amend = commit --amend